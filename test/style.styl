@import '../lib/nib/'

brand=rgb(232, 29, 0)
phi=1.618

*
	box-sizing:     border-box
	text-rendering: optimizeLegibility
	position:       relative

::selection
	background: brand
	text-shadow: none

body
	margin: 0
	font-family: 'Ubuntu Condensed', sans-serif
	color: rgba(0,0,0,0.6)
	text-align:center
	background:#eee
	padding-top:2.8em
	line-height:1.8em
	font-size:16px
	@media screen and (max-width:940px)
		font-size:25px
		padding-top:5.6em
	@media screen and (max-width:690px)
		font-size:20px
	@media screen and (max-width:600px)
		font-size:16px
	@media screen and (min-width:1300px)
		font-size:18px
	@media screen and (min-width:1390px)
		font-size:20px

html,body
	min-height: 100%

img
	max-width: 100%
	border: none

h1,h2,h3,h4,h5
	font-family: 'Ubuntu', sans-serif
	color: rgba(0,0,0,0.9)
	margin-top:0
h4,h5
	margin:0

a
	color:brand

a::selection,h2:target::selection
	color: #fff

strong
	font-family: 'Ubuntu', sans-serif
	color: rgba(0,0,0,0.9)

h2>img
	width:250px
	float:right
	margin-left:10px
	margin-bottom:10px
	clear:both
	border:solid 8px #fff
	@media screen and (max-width:1200px)
		float:none
		display:block
		left:100%
		margin-left:-250px
		margin-top:10px
	@media screen and (max-width:940px)
		float:right
		display:inline-block
		left:0
		margin-left:10px
		margin-top:0
	@media screen and (max-width:600px)
		float:none
		display:block
		left:100%
		margin-left:-250px
		margin-top:10px

padd=30px
moduleMargin=(padd/phi)

.module,.nav,.avatar,.map,.module h2>img
	box-shadow: 0 0 8px rgba(#000,0.1)

.avatar
	size=5.5em
	width:size; height:size
	background:brand
	float:left
	margin:0 1em 0 0

.module
	display:inline-block
	vertical-align:top
	padding:padd
	width:100%
	background:#fff
	margin-bottom:moduleMargin
	text-align: left
	h2
		margin-top: -100px
		padding-top: 100px
		&:target
			color:brand
			text-shadow:0 0 6px rgba(brand,0.2)


nav
	background:brand
	background:linear-gradient(top,darken(brand,5%) 0%,darken(brand,5%) 49%,darken(brand,8%) 51%,darken(brand,8%) 100%)
	border-top:solid 1px rgba(#fff,0.2)
	border-bottom:solid 1px rgba(#000,0.1)
	position:fixed
	width:100%
	z-index:10
	top:0
	a
		display:inline-block
		padding:0.5em 3em
		color:#fff
		text-decoration:none
		text-shadow: 0 1px 0 rgba(#fff,0.3),0 -1px 0 rgba(#000,0.2)
		border-left:solid 1px rgba(#000,0.1)
		border-right:solid 1px rgba(#fff,0.2)
		@media screen and (max-width:940px)
			width:50%
	.first
		box-shadow:-1px 0 0 rgba(#fff,0.2)
	.last
		box-shadow:1px 0 0 rgba(#000,0.1)
	&:hover
		text-shadow: 0 0 10px rgba(#fff,0.7)
	&:active
		box-shadow: inset 0 0 20px rgba(#000,0.3)
	.clicked
		box-shadow: inset 0 0 20px rgba(#000,0.3)


.artbg
	padding-bottom:55%
	background:#fff url(artb.jpg) bottom right no-repeat
	background-size:contain

.imgbox
	font-size:0
	line-height:0
	padding:0

.col1,.col2
	vertical-align:top
	padding:moduleMargin
	display:inline-block

.col1
	width:61.8%
	padding-left:(moduleMargin/2)

.col2
	width:38.2%
	padding-right:(moduleMargin/2)

@media screen and (max-width:1200px)
	.col1
		width:50%
	.col2
		width:50%
@media screen and (max-width:940px)
	.col1, .col2
		width:100%
		width:100%
		padding:moduleMargin
		padding-bottom:0
	.col2 .module
		margin-bottom:0
@media screen and (max-width:410px)
	.col1,.col2
		padding:moduleMargin 0 0 0

